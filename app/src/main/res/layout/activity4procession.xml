<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity4Procession">
    <!--背景图为bg4，同所有的Activity4的都相同-->
    <ImageView
        android:id="@+id/imageView1_bg4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="centerCrop"

         />

    <ImageView
        android:id="@+id/imageView4_picture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="TODO"
        app:layout_marginTopPercent="4%"
        app:layout_heightPercent="80%"
        app:layout_widthPercent="80%"
        android:scaleType="fitXY"/>
    <!---->

    <ImageView
        android:id="@+id/imageView2_camera"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="20%"
        android:layout_alignBottom="@+id/button1"
        app:layout_marginTopPercent="25%"

        app:srcCompat="@drawable/camera" />

    <ImageView
        android:id="@+id/imageView3_album"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@+id/button1"
        android:layout_toRightOf="@+id/button1"
        app:layout_marginTopPercent="5%"
        app:layout_widthPercent="20%"
        app:layout_heightPercent="10%"
        app:srcCompat="@drawable/album" />

    <Button
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape"
        android:text="上传并分析"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_marginBottomPercent="3%"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="60%" />
</android.support.percent.PercentRelativeLayout>